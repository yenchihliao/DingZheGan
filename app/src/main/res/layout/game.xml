<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout">
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/flashBar1"
            android:background="#BDD684"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="120dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/bar1"
            android:background="#95AB63"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="140dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="New Button"
                android:id="@+id/TestBtn1"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="New Button"
                android:id="@+id/TestBtn2"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="New Button"
                android:id="@+id/TestBtn3"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#BDD982"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Score"
            android:id="@+id/ScoreText"
            android:layout_marginTop="6dp"
            android:textColor="#F2F2F2"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="YourScore"
            android:id="@+id/yourScore"
            android:layout_marginTop="6dp"
            android:autoText="false"
            android:textSize="48sp"
            android:textColor="#F2F2F2"
            android:gravity="center|center_horizontal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/flashBar2"
            android:background="#BDD684"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="120dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/bar2"
            android:background="#95AB63"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="140dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="New Button"
                android:id="@+id/TestBtn4"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="New Button"
                android:id="@+id/TestBtn5"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="New Button"
                android:id="@+id/TestBtn6"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>